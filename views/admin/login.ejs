<%- include ('../home/layouts/header') %>

<section class="apply-now" id="apply">
  <div class="container">
    <div class="row">
      <div class="container">
        <h1 class="text-center text-white">Login Admin Account</h1>
        <div class="row">
          <div class="col-12">
            <form method="POST" action="/admin/signin" class="row g-3 m-2 needs-validation" novalidate>
              <div class="col-md-12">
                <label
                  for="validationCustomEmail"
                  class="form-label text-white"
                  >Email:
                </label>
                <div class="input-group has-validation">
                  <input
                    type="email"
                    class="form-control"
                    name="email"
                    placeholder="Email Address"
                    id="validationCustomEmail"
                    aria-describedby="inputGroupPrepend"
                    required
                  />
                  <span class="input-group-text" id="inputGroupPrepend"
                    ><button type="button" class="btn">
                      <i class="bi bi-envelope-at"></i></button
                  ></span>
                  <div class="invalid-feedback">null</div>
                </div>
              </div>
              <div class="col-md-12">
                <label
                  for="validationCustomPassword"
                  class="form-label text-white"
                  >Password:
                </label>
                <div class="input-group has-validation">
                  <input
                    type="password"
                    class="form-control"
                    name="password"
                    placeholder="Password"
                    id="validationCustomPassword"
                    aria-describedby="inputGroupPrepend"
                    required
                  />
                  <span class="input-group-text" id="inputGroupPrepend"
                    ><button
                      type="button"
                      id="show-password"
                      class="btn"
                      data-bs-toggle="button"
                      onclick="showPassword()"
                    >
                      <i class="bi bi-eye-slash-fill"></i></button
                  ></span>
                  <div class="invalid-feedback">null</div>
                </div>
              </div>
              <a href="#" class="text-decoration-none text-white"
                >Forgotten Password?</a
              >
              <a href="/admin/register" class="text-decoration-none text-white"
                >Don't have an account? Register</a
              >
              <div class="col-12">
                <button
                  class="btn btn-sm btn-outline-light"
                  type="submit"
                >
                  Login
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include ('../home/layouts/footer') %>
